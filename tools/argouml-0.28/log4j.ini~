#log4j.logger.com.ibm.dsw.common.taglib=WARN
#log4j.logger.com.ibm.ead4j.topaz.persistence.jdbc.TransactionContext_jdbc=WARN
#log4j.logger.com.ibm.dsw.quote.base.cache.QuoteCacheLoader=INFO
